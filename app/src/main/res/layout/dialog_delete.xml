<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17sp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_delete"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="17sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_600"
                    android:gravity="center|center_vertical"
                    android:includeFontPadding="false"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/are_you_sure_you_want_to_delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="17sp"
                    android:layout_marginVertical="15sp"
                    android:fontFamily="@font/opensans_500"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:background="@drawable/bg_connection_ghost"
                    android:paddingVertical="13sp"
                    android:textColor="#E4E4E4"
                    android:textSize="@dimen/_16ssp"
                    android:text="@string/no" />

                <TextView
                    android:id="@+id/tv_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="17sp"
                    android:layout_marginVertical="15sp"
                    android:fontFamily="@font/opensans_500"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingVertical="13sp"
                    android:background="@drawable/bg_connection_ghost"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:text="@string/yes" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>