<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@drawable/bg_bg_fragment_home">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/opensans_400"
            android:text="Options"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_add_expense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="83dp"
                android:background="@drawable/bg_10ffff_radius"
                android:drawableTop="@drawable/ic_expenses2"
                android:paddingTop="12dp"
                android:drawablePadding="6dp"
                android:fontFamily="@font/opensans_400"
                android:gravity="center"
                android:text="@string/expenses"
                android:textColor="@color/color_B1C7FF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_marginHorizontal="22dp"
                android:id="@+id/tv_add_income"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="83dp"
                android:background="@drawable/bg_10ffff_radius"
                android:drawableTop="@drawable/ic_income2"
                android:drawablePadding="6dp"
                android:fontFamily="@font/opensans_400"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="@string/income"
                android:textColor="@color/color_B1C7FF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_add_loans"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="83dp"
                android:background="@drawable/bg_10ffff_radius"
                android:drawableTop="@drawable/ic_loans2"
                android:drawablePadding="6dp"
                android:fontFamily="@font/opensans_400"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="@string/loans"
                android:textColor="@color/color_B1C7FF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_close"
            android:padding="15dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_close"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
