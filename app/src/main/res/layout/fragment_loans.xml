<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv1"
        android:background="@drawable/boder_1c5dff_7ca1ff_00000_80"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
    <LinearLayout
        android:id="@+id/ll1"
        app:layout_constraintTop_toTopOf="@id/iv1"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="center"
            android:layout_marginStart="14dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/opensans_600"
            android:text="@string/money_borrowed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_marginStart="14dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/opensans_600"
            android:layout_marginEnd="10dp"
            android:text="@string/loans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_borrowed"
            android:gravity="center"
            android:layout_marginStart="14dp"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:fontFamily="@font/opensans_700"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_loans"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="0.00$"
            android:layout_marginStart="14dp"
            android:textColor="#00FF6F"
            android:textSize="20sp"
            android:fontFamily="@font/opensans_700"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="18dp"
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="18dp"
        android:id="@+id/cl_null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp">
        <ImageView
            android:id="@+id/iv_null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img_null"
            android:layout_width="150dp"
            android:layout_height="158dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/iv_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:text="@string/add_your_first_expense_to_get_started"
            android:fontFamily="@font/opensans_600"
            android:textColor="@color/white"
            android:textSize="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>