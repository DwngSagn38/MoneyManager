<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CCCCCC</item>
        <item name="colorControlActivated">#FFB800</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item> <!-- Xóa nền trắng gốc -->
    </style>

    <style name="MonthCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_C3C3C3</item>
        <item name="android:fontFamily">@font/opensans_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="android:fontFamily">@font/opensans_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:gravity">center</item>
    </style>

</resources>